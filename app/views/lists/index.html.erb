

<div class="cover mb-4 d-flex align-items-center justify-content-center, style="background-color: rgb(230, 219, 219)">
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0"><strong>Lists</strong></h3>
    <%= button_to "Create a movie list", new_list_path, method: :get, class: "btn btn-outline-danger" %>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class:"text-decoration-none" do %>
        <div class="card-category" style="background-image: url('https://source.unsplash.com/random/?<%=list.name %>')">
            <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>